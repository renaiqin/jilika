<template>
  <div class="selTeacherwarp">
        <div class="m_selTeachHead">
            <div class="searchbox" v-on:click="searchTeacher">
                <input type="text" class="searchipt">
                <div class="searchNone"><div class="holder">搜索</div></div>
            </div>
        </div>
        <div class="m_selTeachBody">
            <div class="u_selAllText">全部</div>
        </div>
        <div class="m_selLineTab">所有部门</div>
        <div class="m_departmentMain">
            <ul>
                <li v-for="(item,index) in departmentList" v-on:click="selDepartment(item)">
                    <div class="u_department_col">{{item.name}}</div>
                </li>
            </ul>
        </div>
  </div>
</template>

<script>
  import { api } from "../../../../utils/Api/index";
  export default {
    name: "rankingHome",
    data(){
      return {
          departmentList:[],
      }
    },
    mounted() {
        this.init();
    },
    methods: {
        /**
         * 说明:初始化基础数据
         * 作者:RayJ
         * 更新时间:2019-03-12
         */
        async init(){
            this.departmentList = this.$store.getters.getDepartment;
            //this.$store.getters.getDepartment
            //console.log(3333333333333333333)

            //console.log(this.$store.getters.getDepartment)
        },
        async selDepartment(item){
            //保存当前选择的部门到vuex中
            this.$store.dispatch("setChoiceDepartment",item);
            //根据部门获取老师
           // console.log(77777777777777)
           
            let getTeacherList = await this.$fetch(api.getTeacherList(),{'xxdm':localStorage.getItem('xxdm'),groupid:item.id,text:''});
           // console.log(getTeacherList)
            this.$store.dispatch("setAllTeacher",getTeacherList.data);
            //console.log()
            this.$router.push({path:'/pages/student/dynamic/selteacher',query: {departId:item.id}})
        },
        searchTeacher(){
            this.$router.push({path:'/pages/student/dynamic/search'})
        },
    },
  }
</script>

